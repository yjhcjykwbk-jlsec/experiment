<?xml version="1.0"?>
<project name="Jeti" default="dist" basedir="../..">
	<description>
        simple example build file
    </description>
	<!-- set global properties for this build -->
	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dist"  location="dist"/>

	<target name="compile" description="compile the source " >
		<ant antfile="src/buildfiles/Compile.xml" target="compile"/>
	</target>

	<target name="dist" depends="compile"
        description="generate the distribution" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}/plugins"/>
		<jar jarfile="${dist}/plugins/appletloadgroupchat.jar">
			<fileset dir="${build}" includes="nu/fw/jeti/plugins/appletloadgroupchat/**" />
		</jar>
	</target>
	
</project>