            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button3"/> -->
        
     <!--    <Button android:id="@+id/btn_center" 
        	android:text="资源"
        	android:textColor="@drawable/magenta"
            android:layout_width="0dip" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button3"/>
         -->
        
