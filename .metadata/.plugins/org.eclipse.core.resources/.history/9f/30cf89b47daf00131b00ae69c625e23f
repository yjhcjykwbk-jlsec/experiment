package org.androidpn.data;

import java.util.Date;

/*
 * related to chat message list
 */
public class ChatInfo {
	String username;
	String chatXml;
	Date time;
	String packetID;
	boolean isSelf;
	//自己发送的，是否发送成功
	boolean sent;
	/*
	 * constructor of a message to send or sent
	 */
	public ChatInfo(String u, String chat, String pid) {
		this.username = u;
		this.chatXml = chat;
		this.packetID=pid;
		this.isSelf=true;
		this.sent=false;
	}
	/*
	 * constructor of a recv message
	 */
	public ChatInfo(String u, String chat, String pid, Date time) {//接收到的
		this.username = u;
		this.chatXml = chat;
		this.time = time;
		this.packetID=pid;
		this.isSelf=false;
	}
	public void setSent(){
		this.sent=true;
	}
	public Date getTime() {
		return time;
	}

	public String getContent() {
		return chatXml;
	}

	public String getName() {
		return username;
	}
	public boolean isSelf(){
		return isSelf;
	}
}